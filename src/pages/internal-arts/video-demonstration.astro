---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro'
import Breadcrumb from '../../components/Breadcrumb.astro';

let title = "Tai Chi Video demonstrations";
let description = "Videos of CIAA instructors doing Tai Chi, Taijiquan, Yiquan, Baguazhang, Xingyiquan & Qigong";
let keywords = "video demonstration, video, taijiquan, taiji, tai chi, taichi, yiquan, qigong, chi kung, martial art, CIAA, Berkshire, Berks, Reading, Swallowfield";
---
<Layout>

    <Header slot="header-content" title={title} description={description} keywords={keywords}/>    

    <section slot="main-content" class="section">
        <div class="container">
            <Breadcrumb />
                <div class="content">
                    <h1>Tai Chi Video Demos</h1>
                    <p>A library of video demonstrations provided by students and instructors.</p>
                    <h2>Fan Form Demonstration</h2>
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/S8X0fvZrjUY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/C6JgWp6AYKQ" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                </div>
        </div>
    </section>

</Layout>