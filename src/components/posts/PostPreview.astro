---
export interface Props {
	title: string;
	description: string;
	publishDate: string;
	url: string;
}

const { title, description, publishDate, url } = Astro.props as Props;
---

<article class="post-preview block pt-4">
	<header>
		<span class="tag mb-3 is-info is-light">Published:&nbsp;<time>{publishDate}</time></span>
		<a href={url}><h3 class="title is-4 mb-3">{title}</h3></a>
	</header>
	<div class="block mb-2">
		<p class="">{description}</p>
	</div>
	<a href={url}><p>Read more</p></a>
</article>
